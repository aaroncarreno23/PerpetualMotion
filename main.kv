<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

	##################
	##### BUTTONS ####
        ##################

        # Quit button
        Button:
            text: 'X'
            font_size: 23
            size_hint: None, None
            size: root.width * 0.015, root.width * 0.015
            x: root.width * 0.965
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 1
            on_release: root.quit()




       # DPEAButton:
       #     id:tapMotors
       #     color: 0,1,0,1
       #     size: 50, 50
       #     x: root.width * 0.2
       #     y: root.width * 0.5
       #     text: "Ramp Motor OFF"
       #     on_press: root.TapMotor()

        DPEAButton:  
            id: auto
            color: 0.917, 0.796, 0.380, 1
            text: "Start"
            center_x: root.width * 0.5
            y: root.height * 0.6
            background_color: 1, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 75,75
            on_press: root.auto()
            on_release: root.resetColors()

        # Turn on/off gate
        DPEAButton:
            id: gate
            color: 0.180, 0.188, 0.980, 1
            text: "Open Gate"
            center_x: root.width * 0.3
            y: root.height * 0.4
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 100,100
            on_press: root.toggleGate()
            on_release: root.resetColors()

        DPEAButton:
            id: ramp
            color: 0.180, 0.188, 0.980, 1
            text: "Ramp to Top"
            center_x: root.width * 0.5
            y: root.height * 0.4
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 100, 100
            on_press: root.toggleRamp()
            on_release: root.resetColors()

        DPEAButton:
            id: staircase
            color: 0.180, 0.188, 0.980, 1
            text: "Staircase Off"
            center_x: root.width * 0.7
            y: root.height * 0.4
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None,None
            size: 100,100
            on_press: root.toggleStaircase()
            on_release: root.resetColors()

	##################
	##### SLIDERS ####
        ##################

        Slider:
            id: rampSpeed
            orientation: 'horizontal'
            min: 1
            max: 8
            value: 5
            step: 1
            center_x: root.width * 0.6
            y: root.height * 0.15
            size_hint_x: 6
            on_value: root.setRampSpeed(self, self.value)

        Slider:
            id: staircaseSpeed
            orientation: 'horizontal'
            min: 90
            max: 180
            value: 135
            step: 1
            center_x: root.width * 0.6
            y: root.height * 0.025
            size_hint_x: 6
            on_value: root.setStaircaseSpeed(self, self.value)


        ##################
	##### LABELS #####
        ##################

        Label:
            id: title
            text: 'Perpetual Motion Machine'
            font_size: 55
            bold: True
            center_x: root.width * 0.5
            halign: 'center'
            y: root.height * 0.75
            color: 0.9, 0.9, 0.9, 1

        Label:
            id: rampSpeedLabel
            text: "Ramp Speed: 2 revolutions/second"
            font_size: 20
            center_x: root.width * 0.22
            y: root.height * 0.2
            color: 0.8, 0.8, 0.8, 1

        Label:
            id: staircaseSpeedLabel
            text: 'Staircase Speed: 45'
            font_size: 20
            center_x: root.width * 0.20
            y: root.height * 0.0
            color: 0.8, 0.8, 0.8, 1


